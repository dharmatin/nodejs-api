{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "standard",
    "plugins":[
        "import",
        "node",
        "promise",
        "standard"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}